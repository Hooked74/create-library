{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": false,
    "isolatedModules": false,
    "noEmit": false,
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "include": ["dist/**/*.d.ts", "src"],
  "exclude": ["src/**/*.test.ts", "src/**/__tests__/*"]
}
